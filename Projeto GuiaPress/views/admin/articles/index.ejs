<%- include('../../includes/header') %>
<%- include('../../includes/navbar') %>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <br>
    <a href="/admin/articles/new" class="btn btn-primary">Criar novo artigo</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            <% articles.forEach(article => { %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td>
                    <form method="post" action="/articles/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../../includes/footer') %>

<script>
    function confirmDelete(event, form) {
        event.preventDefault();

        const decision = confirm("Deseja deletar este artigo?");

        if(decision) {
            form.submit();
        }
    }
</script>